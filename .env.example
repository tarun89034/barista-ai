# =============================================================================
# LLM API Keys
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Financial Data APIs
# =============================================================================
# Alpha Vantage API key (free tier available at https://www.alphavantage.co/)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io API key for market data
POLYGON_API_KEY=your_polygon_key_here

# Finnhub API key for stock data
FINNHUB_API_KEY=your_finnhub_key_here

# =============================================================================
# Vector Database Configuration
# =============================================================================
# Pinecone API key for vector storage
PINECONE_API_KEY=your_pinecone_key_here

# Pinecone environment (e.g., us-west1-gcp, us-east1-gcp)
PINECONE_ENVIRONMENT=your_pinecone_environment

# Pinecone index name
PINECONE_INDEX_NAME=barista-ai-memory

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Database URL for SQLite (local) or PostgreSQL (production)
DATABASE_URL=sqlite:///./barista_ai.db

# =============================================================================
# Risk Analysis Parameters
# =============================================================================
# Default confidence level for VaR calculations (0.90, 0.95, 0.99)
DEFAULT_CONFIDENCE_LEVEL=0.95

# VaR calculation method: parametric, historical, monte_carlo
DEFAULT_VAR_METHOD=historical

# Number of simulations for Monte Carlo VaR
MONTE_CARLO_SIMULATIONS=10000

# Lookback period in days for historical analysis
HISTORICAL_LOOKBACK_DAYS=252

# =============================================================================
# Rebalancing Parameters
# =============================================================================
# Rebalancing threshold (0.05 = 5% deviation triggers rebalancing)
REBALANCING_THRESHOLD=0.05

# Minimum cash reserve percentage
MIN_CASH_RESERVE=0.05

# Maximum position size as percentage of portfolio
MAX_POSITION_SIZE=0.30

# =============================================================================
# Market Monitor Settings
# =============================================================================
# Price update interval in seconds
PRICE_UPDATE_INTERVAL=60

# Price alert threshold (0.02 = 2% price movement triggers alert)
PRICE_ALERT_THRESHOLD=0.02

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# Cache expiration time in seconds
CACHE_EXPIRATION=300

# =============================================================================
# Memory Agent Settings
# =============================================================================
# Number of historical records to retrieve for context
MEMORY_CONTEXT_SIZE=10

# Embedding model for vector storage
EMBEDDING_MODEL=text-embedding-ada-002

# Similarity threshold for memory retrieval
SIMILARITY_THRESHOLD=0.75

# =============================================================================
# Portfolio Settings
# =============================================================================
# Default base currency
BASE_CURRENCY=USD

# Benchmark index for beta calculation (e.g., ^GSPC for S&P 500)
BENCHMARK_SYMBOL=^GSPC

# Risk-free rate for Sharpe ratio (annual percentage)
RISK_FREE_RATE=0.04

# =============================================================================
# API Server Settings (if running as web service)
# =============================================================================
# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Enable API documentation
API_DOCS_ENABLED=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Feature Flags
# =============================================================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable detailed logging
ENABLE_DETAILED_LOGGING=false

# Enable performance profiling
ENABLE_PROFILING=false
